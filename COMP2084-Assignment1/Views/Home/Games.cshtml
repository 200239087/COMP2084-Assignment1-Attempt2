@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Games";
}

<h2>Games For: @Model.Name</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>Title</th>
        <th>Company</th>
        <th>Rating</th>
    </tr>

    @foreach (var g in Model.game)
    {
        <tr>
            <td>@g.title</td>
            <td>@g.company</td>
            <td>@g.rating</td>
        </tr>
    }
</table>
